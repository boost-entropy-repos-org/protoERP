<?xml version="1.0" encoding="UTF-8"?>

<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="jpaData" transaction-type="RESOURCE_LOCAL">
        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
        
        <properties>

            <property name="javax.persistence.jdbc.driver" value="com.mysql.cj.jdbc.Driver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost/protoerp"/>
            <property name="javax.persistence.jdbc.user" value="protoerp"/>
            <property name="javax.persistence.jdbc.password" value="protoerp"/>
        	
            <property name="hibernate.dialect" value="gr.codebb.lib.database.CustomMysqlDialect"/>
	    
            <property name="show_sql" value="true"/>
            <property name="format_sql" value="true"/>
            
            <property name="hibernate.hbm2ddl.auto" value="update" />
        </properties>
            
        
    </persistence-unit>
</persistence>
